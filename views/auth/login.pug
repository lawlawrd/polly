extends ./layout.pug

block title
  title Login | Polly

block content
  form.container.yellow.login-form(method="post", action="/login")
    p Welcome back! Login to your account:
    div.integrated-label
      input#email(type="email", name="email", placeholder="Email", required, autocomplete="email", value=email || "")
      label(for="email") Email
    div.integrated-label
      input#password(type="password", name="password", placeholder="Password", required, autocomplete="current-password")
      label(for="password") Password
    input(type="hidden", name="next", value=next || "/")
    div.controls
      button.primary(type="submit") Log in
  p
    | Need an account? 
    a(href="/register") Register here.
